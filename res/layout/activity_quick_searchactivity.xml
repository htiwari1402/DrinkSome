<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_weight="1" >

    <!-- Menu Panel -->
    <RelativeLayout
           android:id="@+id/menuPanel"
           android:layout_height="match_parent"
           android:layout_width="wrap_content"
           android:gravity="right"
           android:orientation="vertical"
           android:background="#1ea8e0" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#1ea8e0" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="519dp"
                android:background="#1ea8e0" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" 
                    
                    android:background="#1ea8e0">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" 
                        android:background="#1ea8e0">
                    </TableRow>

                    <TableRow
                        android:id="@+id/ViewSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="#1ea8e0" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            
                            android:src="@drawable/searchsetting" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Search"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold|italic" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/ViewEventCalender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#1ea8e0" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/eventcalender" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="Events Calender"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold|italic" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/ViewEditorial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#1ea8e0" >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/editorials" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="Editorials"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold|italic" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/ViewPromo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:background="#1ea8e0">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/promo" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="Promotions"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold|italic" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/ViewFavorites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:background="#1ea8e0">

                        <ImageView
                            android:id="@+id/imgFavorites"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/yourfavorites" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="Your Favorites"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold|italic" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/ViewDiscover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#1ea8e0" >

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/discover" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="Discover"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold|italic" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/ViewSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#1ea8e0" >

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/settings" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="Settings"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold|italic" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow9"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="#1ea8e0" >
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#1ea8e0" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" 
                            android:background="#1ea8e0">

                           <ImageView
                                android:id="@+id/imageUserpic"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/userpicback" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#1ea8e0" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:text="user_name"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:text="user.mail@xxx.com"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </ScrollView>
           
            </RelativeLayout>
            
       <!-- Sliding Panel -->

    <RelativeLayout
         android:id="@+id/slidingpanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:descendantFocusability="beforeDescendants"
          android:focusableInTouchMode="true"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:background="#1ea8e0" >

                <ImageView
                    android:id="@+id/imagemenuopen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                    android:src="@drawable/menuopen" />

                <ImageView
                    android:id="@+id/imageHomeButton"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/homebuttonlogo" />

                <AutoCompleteTextView
                    android:id="@+id/txtquicksearchTop"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageHomeButton"
                    android:layout_toRightOf="@+id/imagemenuopen"
                    android:background="@drawable/edit_drawable"
                    
                    android:paddingLeft="45dp"
                    android:paddingRight="10dp"
                    android:textColor="#accce2" >

                   
                </AutoCompleteTextView>

                <ImageView
                    android:id="@+id/imgtop"
                    android:layout_width="40sp"
                    android:layout_height="20sp"
                    android:layout_alignLeft="@+id/txtquicksearchTop"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/quicksearch" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" 
                     android:scrollbarThumbVertical="@drawable/scrollbar"
                android:scrollbarSize="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="446dp" >

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:text="Advanced Search"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#1ea8e0"
                            android:textStyle="bold|italic" />

                        <AutoCompleteTextView
                            android:id="@+id/txtsearchlocation"
                             android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_below="@+id/textsearchoutlet"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25sp"
                              android:textColor="#accce2"
                              android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColorHint="#accce2"
                            android:hint="All Location"
                             android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                             android:background="@drawable/edit_drawable"
                            
                            android:ems="10" />

                        <Spinner
                            android:id="@+id/spinner"
                               android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_below="@+id/txtsearchlocation"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25sp"
                              android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                           android:prompt="@string/spinner"
                           android:entries="@array/spinner_values"
                           
                         android:background="@drawable/edit_drawable"
                         
                            
                            android:ems="10" />

                        <AutoCompleteTextView
                            android:id="@+id/textsearchoccassion"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_below="@+id/spinner"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25sp"
                              android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColorHint="#accce2"
                             android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                              android:textColor="#accce2"
                            android:hint="All Occasions"
                            android:background="@drawable/edit_drawable"
                            android:ems="10" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/seekBar1"
                            android:layout_below="@+id/seekBar1"
                            android:text=""
                            android:textColor="#1ea8e0"
                            android:textStyle="bold|italic"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/textmaxamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/seekBar1"
                            android:layout_below="@+id/seekBar1"
                            android:text=""
                            android:textColor="#1ea8e0"
                            android:textStyle="bold|italic"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/imagequickserch"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <AutoCompleteTextView
                            android:id="@+id/textsearchoutlet"
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:layout_alignLeft="@+id/txtsearchlocation"
                            android:layout_below="@+id/textView10"
                            android:layout_marginTop="20sp"
                            android:layout_toLeftOf="@+id/imagequickserch"
                            android:background="@drawable/edit_drawable"
                            android:ems="10"
                            android:hint="Search Outlets,Bars,Pubs"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#accce2"
                            android:textColorHint="#accce2" />

                        <TextView
                            android:id="@+id/textbjt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView11"
                            android:layout_alignBottom="@+id/textView11"
                            android:layout_toRightOf="@+id/textView11"
                            android:text="$"
                            android:textStyle="bold|italic"
                            android:textColor="#1ea8e0"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <SeekBar
                            android:id="@+id/seekBar1"
                            android:layout_width="400sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_centerHorizontal="true"
                            
                            android:layout_below="@+id/textView11" />

                        <Button
                            android:id="@+id/buttonsearch"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_alignTop="@+id/textView12"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/buttonstyle"
                            android:text="Search"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textsearchoccassion"
                            android:layout_below="@+id/textsearchoccassion"
                            android:layout_marginTop="19dp"
                            android:text="Budget :"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#1ea8e0"
                            android:textStyle="bold|italic" />

                        <ImageView
                            android:id="@+id/imagequickserch"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_alignBottom="@+id/textsearchoutlet"
                            android:layout_alignRight="@+id/txtsearchlocation"
                            android:src="@drawable/homepagediscover" />

                    </RelativeLayout>

                </ScrollView>

            </RelativeLayout>

        </TableLayout>

        

    </RelativeLayout>

</FrameLayout>