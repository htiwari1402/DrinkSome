<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/viewsearchResult"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:id="@+id/viewsearchResult"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/textView1" >
        
        <ImageView
        android:id="@+id/websearchResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/imagebackground"
        />
    
        
    </RelativeLayout>

    <TextView
        android:id="@+id/textSearchResult_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:paddingRight="10dp"
        android:text="Demo Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1ea8e0"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSearchResult_title"
        android:layout_below="@+id/textSearchResult_title"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:text="x min walking distance"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#1ea8e0"
        android:textSize="14dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textSearchresult_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textmin"
        android:layout_below="@+id/textmin"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:text="Location -"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textSearchresult_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSearchresult_location"
        android:layout_below="@+id/textSearchresult_location"
        android:text="Type -"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textSearchresult_Occassion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtmoreinfo"
        android:layout_below="@+id/textSearchresult_type"
        android:text="Occassion -"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txtmoreinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSearchresult_type"
        android:layout_below="@+id/textSearchresult_Occassion"
        android:text="more info"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#1ea8e0"
        android:layout_marginTop="5dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/buttonreview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#1ea8e0"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/buttonreview"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtmoreinfo"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle"
        android:text="Reviews"
        android:layout_marginRight="5dp"
        android:textColor="#ffffff" />

</RelativeLayout>